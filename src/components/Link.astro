---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"a">;

const { href, class: className, ...props } = Astro.props;
---

<a
  href={href}
  class:list={[
    className,
    "underline underline-offset-2 dark:hover:bg-white dark:hover:text-neutral-900 hover:no-underline",
  ]}
  {...props}
>
  <slot />
</a>
